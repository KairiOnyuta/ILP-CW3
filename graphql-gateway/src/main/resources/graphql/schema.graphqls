type Drone {
  name: String
  id: Int
  cooling: Boolean
  heating: Boolean
  capacity: Float
  maxMoves: Int
  costPerMove: Float
  costInitial: Float
  costFinal: Float
}

input QueryFilterInput {
  attribute: String!
  operator: String!
  value: String!
}

input RequirementsInput {
  capacity: Float!
  cooling: Boolean
  heating: Boolean
  maxCost: Int
}

input DeliveryInput {
  lng: Float!
  lat: Float!
}

input MedDispatchInput {
  id: Int!
  date: String
  time: String
  requirements: RequirementsInput!
  delivery: DeliveryInput!
}

type LngLat {
  lng: Float!
  lat: Float!
}

type Delivery {
  deliveryId: Int
  flightPath: [LngLat!]!
}

type DronePath {
  droneId: Int!
  deliveries: [Delivery!]!
}

type DeliveryPathResult {
  totalCost: Float!
  totalMoves: Int!
  dronePaths: [DronePath!]!
}

type Query {
  dronesWithCooling(state: Boolean!): [Drone!]!
  droneDetails(id: Int!): Drone
  queryDrones(filters: [QueryFilterInput!]!): [Drone!]!
  availableDrones(dispatches: [MedDispatchInput!]!): [Drone!]!
}

type Mutation {
  calculateDeliveryPath(dispatches: [MedDispatchInput!]!): DeliveryPathResult!
}
